<div class="container">
  <div class="row">
    <div class="col-md-2">
      <% if current_user %>
        <%= link_to 'Sign out', destroy_user_session_path %><br><br>
        <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <br></br>

  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-md-3">
        <%= image_tag post.image, class: "img-thumbnail" %>
      </div>
      <div class="col-md-9">
        <%= post.body.truncate(700).html_safe %>
        <div class="text-muted">
          <em>Posted on <%= post.created_at.to_formatted_s(:long) %></em>
        </div>
        <% if current_user %>
          <p>
            <%= link_to 'Show', post %> |
            <%= link_to 'Edit', edit_post_path(post) %> |
            <%= link_to 'Destroy', post, method: :delete, data: {
            confirm: "Are you sure?" } %>
          </p>
        <% end %>
        <br><br>
      </div>
    </div>
  <% end %>
</div>




